<div class="text-center">
  <h1>タスク一覧</h1>
</div>

<div class="row">
  
  <div class="mt-2 col-sm-7 offset-sm-5">
    <ul class="nav nav-tabs nav-justified">
      <li class="nav-item"><a href="<%= exclude_finished_path %>" class="nav-link <%= 'active' if current_page?(exclude_finished_path) %>">終了タスク非表示</a></li>
      <li class="nav-item"><a href="<%= tasks_path %>" class="nav-link <%= 'active' if current_page?(tasks_path) %>">終了タスク表示</a></li>
    </ul>
  </div>
</div>


  <div class="row">
    <table class="table table-hover">
      <thead>
        <tr>
          <td>カテゴリ</td>
          <td>親タスク名</td>
          <td>タスク名</td>
          <td>状態</td>
          <td>優先度</td>
          <td>開始日</td>
          <td>終了日</td>
        </tr>
      </thead>
      <tbody>
        <% if @tasks.any? %>
          <% @tasks.each do |task| %>
            <% next if task.status.status.eql?('終了') %>
              <td><%= task.category.category %></td>
              <td> 親タスク名ロジック要検討</td>
              <td><a href="<%= edit_task_path(task) %>"><%= task.name %></a></td>
              <td><%= task.status.status %></td>
              <td><%= task.priority.priority %></td>
              <td><%= task.start %></td>
              <td><%= task.deadline %></td>
            </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
  </div>
