<% if logged_in? %>
  <div class="row">
    <div class="col-sm-4 offset-sm-1">
      <div class="card">
        <%= link_to 'タスク一覧', tasks_path, class: 'card-body btn btn-secondary' %>
      </div>
    </div>
    
    <div class="col-sm-4 offset-sm-2">
      <div class="card">
        <%= link_to 'タスク新規追加', new_task_path, class: 'card-body btn btn-secondary' %>
      </div>
    </div>
  </div>
  
  <div class="row mt-3">
    <div class="col-sm-4 offset-sm-1">
      <div class="card">
        <%= link_to 'ガントチャート', ganttchart_path, class: 'card-body btn btn-secondary' %>
      </div>
    </div>
    
    <div class="col-sm-4 offset-sm-2">
      <div class="card">
        <%= link_to 'ユーザ詳細', user_path(current_user), class: 'card-body btn btn-secondary' %>
      </div>
    </div>
  </div>

<% else %>

  <div class="center jumbotron">
    <div class="text-center">
      <h1>Welcome to the TaskBoard</h1>
      <div class="mt-5 row justify-content-sm-center">
        <div class="col col-sm-auto">
          <%= link_to 'Sign up', signup_path, class: 'btn btn-lg btn-primary' %>
        </div>
        <div class="col-sm-auto">
          <h3>Or</h3>
        </div>
        <div class="col col-sm-auto">
          <%= link_to 'Login', login_path, class: 'btn btn-lg btn-primary' %>
        </div>
      </div>
    </div>
  </div>

<% end %>